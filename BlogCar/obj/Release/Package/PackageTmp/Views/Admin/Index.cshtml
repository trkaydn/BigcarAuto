@using BlogCar.Models
@model CarBrandViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<a class="btn btn-info" href="@Url.Action("AddCar","Admin")">İlan Ekle</a>
<a class="btn btn-dark" id="btnAddBrand">Marka Ekle</a>
<a class="btn btn-secondary" href="@Url.Action("Messages","Admin")">Mesajlar</a>
<br /><br />
<h3 style="text-align:center"><a href="@Url.Action("Index","Admin")">Tüm İlanlar</a></h3>

<input id="tsearch" type="text" placeholder="İlan Ara...">
<br />
@if (TempData["AddCarMessage"] != null)
{
    <div class="alert alert-secondary"><button class="close" data-dismiss="alert" style="height:auto;color:darkred">×</button><h4 style="color:darkblue">@TempData["AddCarMessage"]</h4></div>
}
<div class="table-responsive">
    <table class="table table-hover table-active">
        <thead class="bg-dark">
            <tr>
                <th>İlan No</th>
                <th>Marka</th>
                <th>Model</th>
                <th>İlan Tarihi</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody id="tblcars">
            @foreach (var car in Model.Car)
            {
                <tr style="cursor:pointer;" data-href="" id="@car.Id">
                    <td id="trid">@car.Id</td>
                    <td>@car.Brand.Name</td>
                    <td>@car.Model</td>
                    <td>@car.ListDate.ToString("dd.MM.yyyy")</td>
                    <td>@car.Price.ToString("#,##0.00") &#8378;</td>
                </tr>
            }
        </tbody>
    </table>
</div>
